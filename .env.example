# ====================================
# Configuración del Servidor
# ====================================
PORT=3000
HOST=localhost

# URL pública del servidor - CRÍTICO para descargas de fotos de perfil
# IMPORTANTE: El frontend debe poder acceder a esta URL para cargar imágenes
# En desarrollo: http://localhost:3000
# En producción: https://tu-dominio.com
SERVER_URL=http://localhost:3000

# ====================================
# Base de Datos PostgreSQL
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_empresas
DB_USER=postgres
DB_PASSWORD=password

# ====================================
# Redis (Obligatorio para producción)
# ====================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ====================================
# JWT (Autenticación)
# ====================================
JWT_SECRET=your_super_secret_key_min_32_chars_very_secure_key_2024
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=30d

# ====================================
# CORS
# ====================================
CORS_ORIGIN=*

# ====================================
# WhatsApp Web Configuration
# ====================================
POLL_INTERVAL_SECONDS=0
POLL_LIMIT=20
